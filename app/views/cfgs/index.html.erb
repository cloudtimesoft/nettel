<div class="container fluid-height clearfix">
<%= render 'head'%>
<h1 class="heading">全局设置</h1>
<div class="widget-container fluid-height clearfix" style="padding: 10px;">
<table class="table table-hover table-bordered table-striped">
  <thead>
    <tr>
      <th class="heading">新用户赠送金额</th>
      <th class="heading">公司名称</th>
      <th class="heading">销售热线</th>
      <th class="heading">技术热线</th>
      <th class="heading">拨号网关</th>

      <th class="heading">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @cfgs.each do |cfg| %>
      <tr>
        <td><%= cfg.give_cost %></td>
        <td><%= cfg.company_name %></td>
        <td><%= cfg.sales_tel %></td>
        <td><%= cfg.service_tel %></td>
        <td><%= cfg.gateway %></td>

        <td align="center"><%= link_to '', edit_cfg_path(cfg), class:"icon-pencil usricons", title: "编辑" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


</div>