<script>
    $(function() {

    $('.defaultradio').click(function(){

            $.get("/tariff_standards/setdefault",{
                defaultval:$(this).val()
            },null,"script");

    });
    });
</script>


<div class="container fluid-height clearfix">
<%= render 'head'%>
<h2 class="heading">套餐设置</h2>
<div class="widget-container fluid-height clearfix">
    <table class="table table-hover table-bordered table-striped">
      <thead style="text-align: center">
      <tr>
        <th class="heading">默认</th>
        <th class="heading">套餐名</th>
        <th class="heading">负数额度</th>
        <th class="heading">备注</th>

        <th class="heading">操作</th>
      </tr>
      </thead>

      <tbody>
    <% @tariff_standards.each do |tariff_standard| %>
      <tr>
        <td width="50px;" style="padding-left: 12px;"><label class="radio"><input class="defaultradio" name="optionsRadios1" type="radio" value=<%= tariff_standard.id %> <%= tariff_standard.isdefault==1?"checked=checked":"" %>><span></span></label></td>
        <td class="hidden-xs"><%= tariff_standard.name %></td>
        <td><%= tariff_standard.minus_amount %></td>
        <td><%= tariff_standard.content %></td>

            <td width="100px" align="center">
              <%= link_to '', tariff_standard,  class:"icon-pencil usricons", title: "编辑" %>&nbsp;&nbsp;
              <%= link_to '', tariff_standard, method: :delete, data: { confirm: '确认删除？' },class:"icon-trash usricons", title:"删除" %></td>
      </tr>
      <% end %>
      </tbody>
      </table>
    <br>
    <%= link_to ' 新建套餐', new_tariff_standard_path, class: "icon-plus btn btn-primary-outline pull-right","data-no-turbolink"=>true %>
  </div>
</div>

