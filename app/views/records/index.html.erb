<h1>Listing records</h1>

<table>
  <thead>
    <tr>
      <th>Phone num</th>
      <th>Time</th>
      <th>Cost</th>
      <th>Start time</th>
      <th>Tag</th>
      <th>User delete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.phone_num_id %></td>
        <td><%= record.time %></td>
        <td><%= record.cost %></td>
        <td><%= record.start_time %></td>
        <td><%= record.tag %></td>
        <td><%= record.user_delete %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

