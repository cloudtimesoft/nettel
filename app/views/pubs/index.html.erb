<%= render 'head'%>
<h1>Listing pubs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Content</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Status</th>
      <th>Sort</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pubs.each do |pub| %>
      <tr>
        <td><%= pub.title %></td>
        <td><%= pub.type %></td>
        <td><%= pub.content %></td>
        <td><%= pub.start_time %></td>
        <td><%= pub.end_time %></td>
        <td><%= pub.status %></td>
        <td><%= pub.sort %></td>
        <td><%= link_to 'Show', pub %></td>
        <td><%= link_to 'Edit', edit_pub_path(pub) %></td>
        <td><%= link_to 'Destroy', pub, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pub', new_pub_path %>
