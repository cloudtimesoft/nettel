      <% @sideclas = Sidecla.all%>
      <select id="sideclaid" class="form-control" type="text" onchange="cardtypeselect()">

        <%= @sideclas.each do |f| %>
        <option value=<%=f.id%>><%=f.title%></option>
         <%end%>
            </select></td>
