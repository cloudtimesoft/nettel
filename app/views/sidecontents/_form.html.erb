    </tr>
  <tr>
  <div  class="form-group">
    <td style="margin-top: 10px;width:30px;text-align: right;padding: 10px;"> <%= f.label :title %></td>
    <td><%= f.text_field :title ,:class =>"form-control"%></td>
  </div>
  </tr>
  <tr>
  <div  class="form-group">
    <td style="margin-top: 10px;width:30px;text-align: right;padding: 10px;"> <%= f.label :inpaper %></td>
    <td ><%= f.text_field :inpaper,:class =>"form-control" %></td>
  </div>

  </tr>
