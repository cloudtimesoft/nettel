<h1>Listing advertisements</h1>

<table>
  <thead>
    <tr>
      <th>Picstr</th>
      <th>Linkstr</th>
      <th>Starttime</th>
      <th>Endtime</th>
      <th>Status</th>
      <th>Types</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advertisements.each do |advertisement| %>
      <tr>
        <td><%= advertisement.picstr %></td>
        <td><%= advertisement.linkstr %></td>
        <td><%= advertisement.starttime %></td>
        <td><%= advertisement.endtime %></td>
        <td><%= advertisement.status %></td>
        <td><%= advertisement.types %></td>
        <td><%= link_to 'Show', advertisement %></td>
        <td><%= link_to 'Edit', edit_advertisement_path(advertisement) %></td>
        <td><%= link_to 'Destroy', advertisement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Advertisement', new_advertisement_path %>
