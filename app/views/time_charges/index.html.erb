<%= render 'head'%>
<h1>Listing time_charges</h1>

<table>
  <thead>
    <tr>
      <th>Tariff standard</th>
      <th>S charges</th>
      <th>C charges</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @time_charges.each do |time_charge| %>
      <tr>
        <td><%= time_charge.tariff_standard_id %></td>
        <td><%= time_charge.s_charges %></td>
        <td><%= time_charge.c_charges %></td>
        <td><%= time_charge.start_time %></td>
        <td><%= time_charge.end_time %></td>
        <td><%= link_to 'Show', time_charge %></td>
        <td><%= link_to 'Edit', edit_time_charge_path(time_charge) %></td>
        <td><%= link_to 'Destroy', time_charge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Time charge', new_time_charge_path %>
