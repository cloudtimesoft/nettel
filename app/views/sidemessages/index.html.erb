<h1>Listing sidemessages</h1>

<table>
  <thead>
    <tr>
      <th>Contact</th>
      <th>Tel</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sidemessages.each do |sidemessage| %>
      <tr>
        <td><%= sidemessage.contact %></td>
        <td><%= sidemessage.tel %></td>
        <td><%= sidemessage.content %></td>
        <td><%= link_to 'Show', sidemessage %></td>
        <td><%= link_to 'Edit', edit_sidemessage_path(sidemessage) %></td>
        <td><%= link_to 'Destroy', sidemessage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sidemessage', new_sidemessage_path %>
