            <% end %>
          </ul>
        </div>
    <% end %>
    <table class="col-lg-8">
    <tr>
      <div class="form-group">
        <td style="margin-top: 10px;width:30px;text-align: right;padding: 10px;"> <%= f.label :联系人 %></td>
