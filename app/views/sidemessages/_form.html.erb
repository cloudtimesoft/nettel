        <td>  <%= f.text_field :tel,class:"form-control" %></td>
      </div>
    </tr>
    <tr>
      <div class="form-group">
        <td style="margin-top: 10px;width:80px;text-align: right;padding: 10px;"><%= f.label :留言内容 %></td>
        <td> <%= f.text_area :content,class:"form-control" %></td>
      </div>
    </tr>

    <tr>
      <td align="right" colspan="2" style="padding: 10px;"><div class="actions">
